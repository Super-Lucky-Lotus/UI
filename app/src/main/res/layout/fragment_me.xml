<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7a2 "
    android:orientation="vertical"
    tools:context=".MeFragment">

    <ImageView
        android:id="@+id/Mybcg"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:scaleType="centerCrop"
        android:src="@drawable/my_bcg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="168dp"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="#cca266 "
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_userID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户ID"
                android:textColor="#cca266 "
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_setting"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#ffcd74"
                    android:text="个人资料" />

                <Button
                    android:id="@+id/addFri_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="#ffcd74"
                    android:text="＋" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="点赞数"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/num_like"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="100"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <Button
            android:id="@+id/num_follow_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#fff7a2"
            android:gravity="center_vertical"
            android:text="关注数"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/num_follow"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <Button
            android:id="@+id/num_fans_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#fff7a2"
            android:text="粉丝数"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/num_fans"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="#cca266 "
            android:textSize="14sp" />

        <Button
            android:id="@+id/num_friend_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#fff7a2"
            android:text="好友数"
            android:textColor="#cca266"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/num_friends"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="#cca266 "
            android:textSize="14sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_vedio"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#ffcd74"
            android:text="视频"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_collection"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#ffcd74"
            android:text="收藏"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_like"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#ffcd74"
            android:text="点赞"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/video1"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/video2"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/video3"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/video4"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/video5"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/video6"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/video7"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/video8"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

                <ImageView
                    android:id="@+id/video9"
                    android:layout_width="132dp"
                    android:layout_height="200dp"
                    android:background="@drawable/video_frame" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>