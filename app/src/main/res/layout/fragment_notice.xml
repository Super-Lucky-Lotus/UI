                <Button
                    android:id="@+id/comment_tab"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/n_comment" />

            </LinearLayout>

